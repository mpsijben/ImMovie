<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.menno.immovie.MainActivity">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:id="@+id/fragment"
        android:name="com.menno.immovie.MovieFragment" tools:layout="@layout/fragment_main"
        app:layout_widthPercent="50%"
        android:layout_width="0dp"
         android:layout_height="match_parent"/>


    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:id="@+id/fragmentInfo"
        android:name="com.menno.immovie.MovieFragmentInfo" tools:layout="@layout/fragment_movie_info"
        app:layout_marginLeftPercent="50%"
        app:layout_widthPercent="50%"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        />


</android.support.percent.PercentRelativeLayout>